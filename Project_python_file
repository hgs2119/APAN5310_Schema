#create Petitioners table
query = "CREATE TABLE Petitioners  (
    Firm_Name varchar(150) NOT NULL, \
    Group_ID char(5) NOT NULL, \
	PRIMARY KEY (Firm_Name, Group_ID), \
    	FOREIGN KEY (Group_ID) references Case_Groups(Group_ID) \
	ON DELETE CASCADE \
	ON UPDATE CASCADE \
    );"
 cur.execute(query)
 
